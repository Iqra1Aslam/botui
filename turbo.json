{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js",
         "tests/**/*.js"
      ]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["build"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js",
         "tests/**/*.js"
      ]
    },
    "danger-deploy": {
      "outputs": [],
      "dependsOn": ["build"]
    }
  }
}